{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dist for pypi",
            "type": "shell",
            "command": "rm -f dist/*.tar.gz dist/*.whl && python3 setup.py sdist bdist_wheel && twine check dist/*.whl",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "upload to pypi",
            "type": "shell",
            "command": "twine upload dist/reqman-*.tar.gz dist/reqman-*.whl",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "clean repo",
            "type": "shell",
            "command": "rm -rf build reqman.egg-info reqman/__pycache__ .pytest_cache tests/__pycache__ .coverage reqman.html",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
    ]
}